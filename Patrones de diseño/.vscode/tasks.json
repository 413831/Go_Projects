{
    "$schema": "vscode://schemas/tasks",
    "version": "2.0.0",
    "tasks": [
        {
            "label": "go: build",
            "type": "shell",
            "command": "go build ./...",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$go"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "go: test",
            "type": "shell",
            "command": "go test -race ./...",
            "group": "test",
            "problemMatcher": [
                "$go"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "go: lint",
            "type": "shell",
            "command": "golangci-lint run",
            "problemMatcher": []
        }
    ]
}

