# Configuración del Servidor
SERVER_HOST=localhost
SERVER_PORT=8080

# Configuración de Base de Datos PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_secure_password_here
DB_NAME=users_db
DB_SSLMODE=disable

# Configuración de Seguridad
# IMPORTANTE: Estas claves deben ser generadas de forma segura y nunca compartirse
# Genera una clave de 32 bytes para ENCRYPTION_KEY (puedes usar: openssl rand -hex 32)
ENCRYPTION_KEY=your_32_byte_encryption_key_here_must_be_exactly_32_bytes
# Genera un secret seguro para JWT (mínimo 32 caracteres, recomendado 64+)
JWT_SECRET=your_jwt_secret_key_here_minimum_32_characters_recommended_64_plus

# Configuración de Bcrypt
BCRYPT_COST=10

# Entorno (development, production)
# En producción, todas las claves de seguridad DEBEN estar definidas
ENV=development
